- require 'irb'

section
  = render partial: 'web/shared/header'

section.section.index-routes
  .container
    h1.title.is-4
      - transportation_name = Route.transportations.index(params[:transportation]&.to_i)
      - transportation = t("routes.transportations.#{transportation_name}")
      - situation_name = Route.situations.index(params[:situation]&.to_i)
      - situation = t("routes.situations.#{situation_name}")
      - time = params[:activity_time] == 10 ? '一日中' : '半日'
      = "#{time} #{transportation} で行く湘南 #{situation} ルート"

    .border.top

    - @routes.each do |route|
      article.media
        figure.media-left
          p.image.is-64x64
            = image_tag("spots/#{route.spots.first.id}.png")
        .media-content
          .content
            p
              strong
                = link_to route.title, route_path(route.id)

              br
              route.description

    .border.bottom

    .has-text-centered
      = link_to '戻る', :back

= render partial: 'web/shared/footer'
